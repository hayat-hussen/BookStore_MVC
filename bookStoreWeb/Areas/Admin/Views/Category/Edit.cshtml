@model Category
@using BookStore.Models

<div class="card shadow border mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2> <!-- Form title -->
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <!-- Ensure this is properly opened and closed -->
            <input asp-for="Id" hidden />
            <div class="border pb-3">


                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" /> <!-- Input for category name -->
                    <label asp-for="Name" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="DisplayOrder" class="ms-2"></label> <!-- Label for Display Order field -->
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>

                <div class="row">
                    <!-- Added a row to wrap buttons -->
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form> <!-- Properly closed form tag -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Include validation scripts -->
}