@using BookStore.Models
@model Category

<div class="card shadow border mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2> <!-- Form title -->
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Fixed the class name here -->
        <form method="post" class="row">
            <!-- Form submission method is POST -->
            <div class="border p-3 ">
                <!-- Container for the form -->
                

                <div class="form-floating py-2 col-12">
                    <input asp-for="Name"class="form-control border-0 shadow"  /> <!-- Input for category name -->

                    <label asp-for="Name" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow"  /> <!-- Input for display order -->
                    <label asp-for="DisplayOrder" class="ms-2"></label> <!-- Label for Display Order field -->

                    <span asp-validation-for="DisplayOrder" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button> <!-- Submit button -->
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a> <!-- Link to go back -->
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Include validation scripts -->
}