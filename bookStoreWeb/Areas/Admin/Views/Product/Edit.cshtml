@model Product
@using BookStore.Models

<div class="card shadow border my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2> <!-- Form title -->
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <!-- Ensure this is properly opened and closed -->
            <input asp-for="Id" hidden />
            <div class="border pb-3">


                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="Title" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="Title" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label> <!-- Label for Display Order field -->

                    <span asp-validation-for="Description" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="ISBN" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="ISBN" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Author" class="ms-2"></label> <!-- Label for Display Order field -->

                    <span asp-validation-for="Author" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="ListPrice" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="ListPrice" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Price" class="ms-2"></label> <!-- Label for Display Order field -->

                    <span asp-validation-for="Price" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="Price50" class="ms-2"></label> <!-- Label for Name field -->
                    <span asp-validation-for="Price50" class="text-danger"></span> <!-- Validation message for Name -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Price100" class="ms-2"></label> <!-- Label for Display Order field -->

                    <span asp-validation-for="Price100" class="text-danger"></span> <!-- Validation message for Display Order -->
                </div>

                <div class="row">
                    <!-- Added a row to wrap buttons -->
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form> <!-- Properly closed form tag -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Include validation scripts -->
}