@model Product
@using BookStore.Models
<div class="card shadow border my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2> <!-- Form title -->
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Fixed the class name here -->
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border pb-3">




                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="Title" class="ms-2"></label> <!-- Label for Name field -->


                </div>

                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label> <!-- Label for Display Order field -->

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="ISBN" class="ms-2"></label> <!-- Label for Name field -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Author" class="ms-2"></label> <!-- Label for Display Order field -->

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="ListPrice" class="ms-2"></label> <!-- Label for Name field -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Price" class="ms-2"></label> <!-- Label for Display Order field -->

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" disabled class="form-control border-0 shadow" /> <!-- Input for Product name -->

                    <label asp-for="Price50" class="ms-2"></label> <!-- Label for Name field -->
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" disabled class="form-control border-0 shadow" /> <!-- Input for display order -->
                    <label asp-for="Price100" class="ms-2"></label> <!-- Label for Display Order field -->

                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Include validation scripts -->
}